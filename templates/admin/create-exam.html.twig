{% extends 'base.html.twig' %}

{% block title %}create exam
{% endblock %}

{% block body %}

	<div class="container mt-4">
		<div class="form-box rounded box-shadow">

			<h1>Crate Exam</h1>

			{{ form_errors(form) }}

			{{ form_start(form) }}

			{{ form_row(form.title, {'attr': {"class": "form-control"}}) }}

			{{ form_row(form.description, {'attr': {"class": "form-control"}}) }}

			{{ form_row(form.duration, {'attr': {"class": "form-control"}}) }}

			{{ form_row(form.total_marks, {'attr': {"class": "form-control"}}) }}

      <div class="d-none">
        {{ form_row(form.status, {'attr': {'class': 'form-control'}, 'value': 'active'}) }}
      </div>

			<button type="submit" class="btn btn-success mt-4">Create</button>

			{{ form_end(form) }}
			<br>
			<a class="btn btn-primary" href="{{ path('app_admin') }}">Home</a>
		</div>
	</div>

{% endblock %}
