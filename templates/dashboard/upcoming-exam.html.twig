{% extends 'base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}

<div class="container mt-4">

  {% for message in app.flashes('message') %}
    <div class="alert alert-success alert-dismissible">{{ message }}
    </div>
  {% endfor %}

  <div class="header mt-4 border border-dark rounded bg-dark text-light">
    <h2 class="text-center">Upcoming Exams</h2>
  </div>
  <div class="content box-shadow rounded mt-2 p-4 text-center">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">SNo</th>
          <th scope="col">Exam Name</th>
          <th scope="col">Organization</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {% for exam in data %}
          <tr>
            <th scope="row">1</th>
            <td>{{exam.title}}</td>
            <td>{{exam.owner}}</td>
            <td><a href="{{ path('app_applyexam', {id: app.user.id, examid: exam.id} )}}"><button class="btn btn-primary">Apply</button></a></td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <a href="{{ path('app_logout') }}">
      <button class="btn btn-danger">Log out</button>
    </a>
    <a href="{{ path('app_dashboard') }}">
      <button class="btn btn-primary">Home</button>
    </a>
  </div>
</div>

{% endblock %}
