{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!
{% endblock %}

{% block body %}

<div class="container mt-4">
	<div class="form-box rounded box-shadow">
    <h1>Profile</h1>

    {{ form_errors(form) }}

    {{ form_start(form) }}

    {{ form_row(form.name, {'attr': {"class": "form-control"}}) }}

	  <div class="d-none">
      {{ form_row(form.email, {'attr': {"class": "form-control", "value": app.user.email, "style": "display: none;"}}) }}
    </div>

    {{ form_row(form.college_name) }}

    {{ form_row(form.degree) }}

    {{ form_row(form.branch) }}

    {{ form_row(form.graduation_cgpa) }}

    {{ form_row(form.school_name_12) }}

    {{ form_row(form.school_name_10) }}

    {{ form_row(form.per_10) }}

    {{ form_row(form.per_12) }}

    {{ form_row(form.resume) }}<br>

    {{ form_row(form.Image) }}

    {{ form_widget(form.user_id, {'attr': {'style': 'display: none;'}, 'value': app.user.id}) }}

    <button type="submit" class="btn btn-success mt-4">Add Details</button>

    {{ form_end(form) }}
    <br>
    <a class = "btn btn-primary" href="{{ path('app_dashboard') }}">Home</a>
	</div>
</div>

{% endblock %}
